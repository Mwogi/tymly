{
  "Comment": "Gets the summary of the incident.",
  "name": "Incident Summary",
  "version": "1.0",
  "categories": [
    "incidents"
  ],
  "instigators": [
    "user"
  ],
  "StartAt": "GetBoard",
  "States": {
    "GetBoard": {
      "Type": "Task",
      "Resource": "module:getBoard",
      "ResourceConfig": {
        "model": "incidents"
      },
      "Next": "AwaitingHumanInput"
    },
    "AwaitingHumanInput": {
      "Type": "Task",
      "Resource": "module:awaitingHumanInput",
      "ResourceConfig": {
        "uiType": "board",
        "uiName": "tymly_incidentSummary"
      },
      "ResultPath": "$",
      "End": true
    }
  }
}