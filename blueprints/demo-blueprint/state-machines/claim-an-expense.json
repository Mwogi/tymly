      "Resource": "module:upserting",
      "ResourceConfig": {
        "modelId": "expenses"
      },
      "Next": "DeltaReindex"
    },
    "DeltaReindex": {
      "Type": "Task",
      "Resource": "module:deltaReindex",
      "ResourceConfig": {
        "core": "tymly"
      },
      "End": true
