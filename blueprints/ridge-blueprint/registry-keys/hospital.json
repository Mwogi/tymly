          "cqc": {
            "type": "options",
            "ranges": [
              {
                "option": "inadequate",
                "score": 32
              },
              {
                "option": "requires improvement",
                "score": 24
              },
              {
                "option": "good",
                "score": 8
              },
              {
                "option": "outstanding",
                "score": 1
              },
              {
                "option": "unknown",
                "score": 16
              }
            ]
          },
          "eaFoodStandards": {
            "type": "numerical",
            "ranges": [
              {
                "option": "Exempt"
              },
              {
                "option": "AwaitingInspection"
              },
              {
                "minimum": 0,
                "maximum": 2,
                "score": 8
              },
              {
                "moreThan": 2,
                "score": 2
              }
            ]
          },
          "afa": {
            "type": "numerical",
            "ranges": [
              {
                "equals": 0,
                "score": 0
              },
              {
                "minimum": 1,
                "maximum": 3,
                "score": 4
              },
              {
                "moreThan": 3,
                "score": 6
              }
            ]
          },
          "fireIncident": {
            "type": "numerical",
            "ranges": [
              {
                "equals": 0,
                "score": 0
