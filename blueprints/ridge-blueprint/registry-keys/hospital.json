              {
                "equals": 1,
                "score": 6
              },
              {
                "moreThan": 1,
                "score": 16
              }
            ]
          },
          "buildingRegsCommentsIgnored": {
            "type": "constant",
            "value": 32
          },
          "height": {
            "type": "numerical",
            "ranges": [
              {
                "moreThan": 30,
                "score": 22
              }
            ]
          },
          "sprinklerCoverage": {
            "type": "numerical",
            "ranges": [
              {
                "equals": 0,
                "score": 15
              },
              {
                "minimum": 1,
                "maximum": 99,
                "score": -8
              },
              {
                "equals": 100,
                "score": -32
              }
            ]
          },
          "heritage": {
